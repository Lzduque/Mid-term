<!-- views/partials/header.ejs -->

  <header>
    <nav class="navbar top navbar-default bg-light">
      <div class="navbar-header">
        <h1 class="display-1 text-success text-wrap font-weight-bolder">Smart To Do</h1>
      </div>

      <% if (typeof(userId) !== 'undefined') { %>

        <div class="card text-center" style="width: 15rem;">
          <div class="card-body">
            <img src="https://api.adorable.io/avatars/285/test@adorable.io" style="height:5em; width: 5em;">
            <h5>Logged in as:</h5>
            <h6 class="card-title text-truncate"><%= email %></h6>
            <p><a class="card-text" href="/api/users/<%= userId %>/edit">Go to User Profile</a></p>
            <form class="form-inline d-flex justify-content-center" method="POST" action="/Logout" id="formLogout">
            <button class="btn btn-outline-success" type="submit" form="formLogout">Logout</button>
            </form>
          </div>
        </div>

      <% } %>

    </nav>
  </header>
